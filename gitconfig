[user]
	name = Petter Wigle
	email = petter@wigle.se
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[alias]
  c = commit -m
  a = add
  ac = commit -am
  addall = !sh -c 'git add . && git add -u'
  cob = checkout -b
  co = checkout
  b = branch -v
  r = remote -v
  t = tag -l
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  l = log --graph --date=relative --topo-order --pretty='format:%C(yellow)%h%C(yellow)%d %Cblue%ar %Cgreenby %an%Creset -- %s'
  dc = diff --cached
  pullr = pull --rebase
  pristine = clean -f -d -x
  change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f "
  amend = commit --amend --no-edit
[push]
  default = current
[merge]
    tool = emacs
[mergetool "emacs"]
  cmd = $editor \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"

[http]
	cookiefile = /Users/petter/.gitcookies
[core]
	excludesfile = /Users/petter/dotfiles/gitignore

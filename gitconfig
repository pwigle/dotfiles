[alias]
  c = commit -m
  a = add
  addall = !sh -c 'git add . && git add -u'
  cob = checkout -b
  co = checkout
  b = branch -v
  r = remote -v
  t = tag -l
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
[push]
  default = upstream

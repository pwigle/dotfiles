[user]
	name = Petter Wigle
	email = petter.wigle@magine.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[alias]
  c = commit -m
  a = add
  ac = commit -am
  addall = !sh -c 'git add . && git add -u'
  cob = checkout -b
  co = checkout
  b = branch -v
  r = remote -v
  t = tag -l
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  dc = diff --cached
  pullr = pull --rebase
[push]
  default = upstream
[merge]
    tool = p4merge
[mergetool "p4merge"]
    cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false

